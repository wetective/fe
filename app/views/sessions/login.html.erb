<h3>Login</h3>

<% if current_user %>
    <p>You're already logged in</p>

<% else %>
    <%= form_with url: login_path do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.text_field :password %>
        <%= f.submit :login %>
    <% end %>

    <p>Don't have an account? <%= link_to "Register Now", '/register' %></p>

    <%= button_to "Log in with Google", '/auth/google_oauth2'  %>
<% end %>