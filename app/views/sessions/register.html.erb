<h3>Sign Up</h3>

  <%= form_with url: register_url, local: true do |form| %>
    <div class="container col-6">
      <div class="input-group py-2">
          <%= form.label :email, { class: "input-group-text" } %><br>
          <%= form.text_field :email, { class: "form-control", id: "text-input-area" } %></p>
      </div>

      <div class="input-group py-2">
          <%= form.label :password, { class: "input-group-text" } %><br>
          <%= form.password_field :password, { class: "form-control", id: "text-input-area" } %></p>
      </div>

      <table class="container position-relative pt-1">
        <thead>
          <tr class="row">
            <th class="col-3 align-middle">
              <%= form.submit "Sign Up", type: :submit, class: "btn btn-primary position-absolute start-0" %>
            </th>
            <th class="col-5">
              <%= button_to "Signup with Google", href='/auth/google_oauth2' %>
              
            </th>
            <th class="col-3">
              <%= link_to "Login Instead", login_path, class: "position-absolute end-0 mt-2" %></div>
            </th>
          </tr>
        </thead>
      </table>
    </div>
  <% end %>

