<!DOCTYPE html>
<html>
  <head>
    <title>Wetective</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= yield(:head) %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" id='header-bar'>
      <%= image_tag('wetective-logo.png', width: '100') %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <!-- Will need to add logical for if current_user or not -->
      <!-- If current_user display options, name, profile pic -->
      <!-- If not current_user display what is currently below -->
      <% if current_user %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href=<%= root_path %>>Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= map_path %>>Map</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= investigations_path %>>Browse</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= logout_path %>>Log Out</a>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href=<%= root_path %>>Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= map_path %>>Map</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= investigations_path %>>Browse</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= register_path %>>Register User</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= login_path %>>Log In</a>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>
    <%= yield %>
    <br>
    
  </body>
</html>





