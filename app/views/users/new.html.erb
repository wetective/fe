<%= form_with url: register_url do |form| %>
  <div class="container col-6">

    <div class="input-group py-2">
        <%= form.label :first_name, { class: "input-group-text" } %><br>
        <%= form.text_field :first_name, { class: "form-control", id: "text-input-area", required: true } %></p>
    </div>

    <div class="input-group py-2">
        <%= form.label :email, { class: "input-group-text" } %><br>
        <%= form.text_field :email, { class: "form-control", id: "text-input-area", required: true } %></p>
    </div>

    <div class="input-group py-2">
        <%= form.label :password, { class: "input-group-text" } %><br>
        <%= form.text_field :password, { class: "form-control", id: "text-input-area", type: "password", required: true } %></p>
    </div>

    <div class="input-group py-2 pb-3">
        <%= form.label :password_confirmation, { class: "input-group-text" } %><br>
        <%= form.text_field :password_confirmation, { class: "form-control", id: "text-input-area", type: "password", required: true } %></p>
    </div>

    <table class="container position-relative pt-1">
      <thead>
        <tr class="row">
          <th class="col-3 align-middle">
            <%= form.submit "Create Account", type: :submit, class: "btn btn-primary position-absolute start-0" %>
          </th>
          <th class="col-5">
            <a class="oauth-container btn btn-light darken-4 white black-text me-3 shadow-sm mb-5 bg-body rounded" href='/auth/google_oauth2' target="_blank" >
                <img alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" width="16" height="16" />
              Sign Up with Google
            </a>
          </th>
          <th class="col-3">
            <%= link_to "Login Instead", auth_login_path, class: "position-absolute end-0 mt-2" %></div>
          </th>
        </tr>
      </thead>
    </table>
  </div>
<% end %>