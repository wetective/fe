<% flash.each do |type, msg| %>
  <div class="alert alert-danger text-center" role="alert">
    <strong><%= msg %></strong>
  </div>
<% end %>

<%= image_tag('wetective-logo.png', class: 'mx-auto d-block', height: '150') %>

<div class='container text-center'>
  <h2>Browse Real Investigations</h2>
  <h3>Help Solve Real Crimes</h3>
</div>

<br>

<div class="container" id='investigations-most-wanted-section'>
  <div class="row">
    <div class="col-6" id ='investigations-most-wanted-left' align='center'>
      <h3>Open Investigations</h3>
      <p>Help find missing persons</p>
    </div>
    <div class="col-6" id='investigations-most-wanted-right' align='center'>
      <h3>Most Wanted</h3>
      <p>Help find fugitives</p>
    </div>
  </div>
  <% if current_user %>
    <h1 align='center'>
      <%= button_to "Browse Open Cases", investigations_path, method: :get, class: "btn btn-outline-primary my-1" %>
    </h1>
  <% else %>
    <h1 align='center'>
      <%= button_to "Login to Browse Open Cases", login_path, method: :get, class: "btn btn-outline-primary my-1" %>
    </h1>
  <% end %>
</div>

<hr>

<div class='container' id='active-cases-section' align='center'>
  <%= image_tag('fbi-wanted-poster.png', class: 'mx-auto d-block', height: '600') %>
</div>