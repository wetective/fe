<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% @investigations.shuffle.each_with_index do |investigation, i| %>
      <% if investigation.status != "recovered" %>
        <div class="carousel-item <%= 'active' if i == 0 %>">
            <%= image_tag investigation.mugshot, size: '500', class: 'mx-auto d-block' %>
            <br>
            <br>
        </div>
        <div class="align-center"><%= link_to "See More Details", user_investigation_path(@user, investigation.uid) %></div>
      <% end %>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
